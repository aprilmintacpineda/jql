{
  "name": "root",
  "private": true,
  "scripts": {
    "prettier": "prettier \"packages/**/*.js\" --write",
    "eslint": "eslint \"packages/**/*.js\" --fix",
    "lint": "npm run prettier && npm run eslint"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-jest": "^23.1.1",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
